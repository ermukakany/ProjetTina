<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:src="@drawable/logo"
        android:background="@color/cardview_shadow_start_color"
        android:alpha=".50"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cloudm120152016.puy2docs.MainActivity"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes fichiers"
            android:id="@+id/files"
            android:onClick="changeActivityFiles"
            android:background="@drawable/button_transparent"
            android:padding="15dp"
            android:hapticFeedbackEnabled="true"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local File"
            android:id="@+id/buttonlocalfile"
            android:onClick="onClickButtonLocalFile"
            android:background="@drawable/button_transparent"
            android:padding="15dp"
            android:hapticFeedbackEnabled="true"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disconnect"
            android:id="@+id/disconnect"
            android:onClick="userDisconnect"
            android:background="@drawable/button_transparent"
            android:padding="15dp"
            android:hapticFeedbackEnabled="true"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</RelativeLayout>