<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <card_view:android.support.v7.widget.CardView
        android:id="@+id/card_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="6dp">
                <ImageView
                    android:id="@+id/type"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:contentDescription="Type" />
            </LinearLayout>

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/info"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="{gmd-more-vert}"
                android:textSize="24sp"
                android:textColor="@color/grey_600"
                android:foreground="?android:attr/selectableItemBackground"/>

<!--            <ImageButton
                android:id="@+id/info"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:ico_icon="gmd-plus-circle"
                android:contentDescription="tset" />-->

<!--            <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/info"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:iiv_color="#B6B6B6"
                app:iiv_icon="faw-info-circle" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/type1"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/modified"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/name"
                    android:textAppearance="?attr/textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:paddingTop="3dp"
                    android:textColor="#727272"/>

                <!--<TextView
                    android:id="@+id/modified"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/name"
                    android:textAppearance="?attr/textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:paddingTop="3dp"
                    android:textColor="#727272"/>-->
            </LinearLayout>


        </RelativeLayout>

    </card_view:android.support.v7.widget.CardView>
</RelativeLayout>